<form action="/books" data-remote="true" id="add-new-book" method='POST'>
  <div class="row">
    <div class="form-group">
      Name
      <input type="text" name="book[name]" placeholder="Add name" class='form-control' />
    </div>

    <div class="form-group">
      Price
      <input type="text" name="book[price]" placeholder="Add price" class='form-control' />
    </div>
    <div class="form-group">
      Author
      <input type="text" name="book[author]" placeholder="Add author" class='form-control' />
    </div>
  </div>
</form>

<div class="clearfix"></div>
<div class="row">
  <button id='submit-book' class="btn btn-lg btn-success">Save New Book</button>
  <button id='list-books' class="btn btn-lg btn-info">Go to List</button>
</div>